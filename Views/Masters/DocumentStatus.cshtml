
@{
    ViewBag.Title = "DocumentStatus";
    var Accesstype = TADTitleConversion.Controllers.MastersController.Accesstype(User.Identity.Name);
}

<body class="background-White" style="background-color:white">
    <div class="widget-body" style="background-color:white">
        <div class="row">
            <div class="page-header">
                <h1>
                    Documents Listing
                </h1>
            </div>
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="widget-box widget-color-blue3">
                            <div class="widget-header">
                                <div class="widget-title">
                                    Documents
                                    <div class="widget-toolbar">
                                        <div class="pull-center">
                                            <a class="badge btn btn-xs btn-pink btn-round btn-bold no-hover" onclick="ExportToExcel('xlsx')">
                                                <i class="ace-icon glyphicon glyphicon-file"></i>
                                                Export to Excel
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <table id="document" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="center" style="color: black; background-color:cornflowerblue" hidden></th>
                                            <th class="center" style="color: black; background-color:cornflowerblue">Customer Name</th>
                                            <th class="center" style="color: black; background-color:cornflowerblue">Unit No</th>
                                            <th class="center" style="color: black; background-color:cornflowerblue">Company Name</th>
                                            <th class="center" style="color: black; background-color:cornflowerblue">Project</th>
                                            <th class="center" style="color: black; background-color:cornflowerblue">Financing</th>
                                            <th class="center" style="color: black; background-color:cornflowerblue">Document Status</th>
                                            <th class="center" style="color: black; background-color:cornflowerblue">ACTION STATUS</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var cis in ViewBag.CIS)
                                            {
                                                <tr>
                                                    <td style="text-align: left " hidden>
                                                        <label>
                                                            @cis.account
                                                        </label>
                                                    </td>
                                                    <td style="text-align: left ">
                                                        <label>
                                                            @cis.account
                                                        </label>
                                                    </td>
                                                    <td style="text-align: left">
                                                        <label>
                                                            @cis.unit_no
                                                        </label>
                                                    </td>
                                                    <td style="text-align: left">
                                                        <label>
                                                            @cis.company_name
                                                        </label>
                                                    </td>
                                                    <td style="text-align: left">
                                                        <label>
                                                            @cis.project
                                                        </label>
                                                    </td>
                                                    <td style="text-align: left">
                                                        <label>
                                                            @cis.financing
                                                        </label>
                                                    </td>
                                                    <td style="text-align:center">
                                                        <label>
                                                            @if (cis.status == 1)
                                                            {<span class="label">Pre-BIR</span>}
                                                            else if (cis.status == 2)
                                                            { <span class="label label-success arrowed">BIR</span>}
                                                            else if (cis.status == 3)
                                                            { <span class="label label-warning middle">Pre-ROD</span>}
                                                            else if (cis.status == 4)
                                                            { <span class="label label-danger middle">ROD</span>}
                                                            else if (cis.status == 5)
                                                            { <span class="label label-info middle">Pre-Assessor</span>}
                                                            else if (cis.status == 6)
                                                            { <span class="label label-pink middle">Assessor</span>}
                                                            else if (cis.status == 7)
                                                            { <span class="label label-purple middle">Completed</span>}
                                                        </label>
                                                    </td>
                                                    <td style="text-align:center">
                                                        @if (Accesstype == "3")
                                                        {
                                                            <div class="pull-center">
                                                                <a href="../Masters/Master?id=@cis.id" class="btn btn-primary btn-round btn-xs no-hover" style="display: none">
                                                                    <i class="ace-icon fa fa-cogs"></i>
                                                                    Ongoing
                                                                </a>
                                                                <a href="../Masters/TurnOver" class="btn btn-pink btn-round btn-xs no-hover" style="display:none">
                                                                    <i class="ace-icon fa fa-cogs"></i>
                                                                    For Turn-Over
                                                                </a>
                                                                <a href="../Masters/Master?id=@cis.id" class="btn btn-yellow btn-round btn-xs no-hover">
                                                                    <i class="ace-icon fa fa-eye"></i>
                                                                    View
                                                                </a>
                                                            </div>
                                                        }
                                                        else if (cis.status == 1)
                                                        {
                                                            <div class="pull-center">
                                                                <a href="../Masters/Master?id=@cis.id" class="btn btn-primary btn-round btn-xs no-hover">
                                                                    <i class="ace-icon fa fa-cogs"></i>
                                                                    Ongoing
                                                                </a>
                                                            </div>
                                                        }
                                                        else if (cis.status == 2)
                                                        {
                                                            <div class="pull-cente">
                                                                <a href="../Masters/Master?id=@cis.id" class="btn btn-primary btn-round btn-xs no-hover">
                                                                    <i class="ace-icon fa fa-cogs"></i>
                                                                    Ongoing
                                                                </a>
                                                            </div>
                                                        }
                                                        else if (cis.status == 3)
                                                        {
                                                            <div class="pull-center">
                                                                <a href="../Masters/Master?id=@cis.id" class="btn btn-primary btn-round btn-xs no-hover">
                                                                    <i class="ace-icon fa fa-cogs"></i>
                                                                    Ongoing
                                                                </a>
                                                            </div>
                                                        }
                                                        else if (cis.status == 4)
                                                        {
                                                            <div class="pull-center">
                                                                <a href="../Masters/Master?id=@cis.id" class="btn btn-primary btn-round btn-xs no-hover">
                                                                    <i class="ace-icon fa fa-cogs"></i>
                                                                    Ongoing
                                                                </a>
                                                            </div>
                                                        }
                                                        else if (cis.status == 5)
                                                        {
                                                            <div class="pull-center">
                                                                <a href="../Masters/Master?id=@cis.id" class="btn btn-primary btn-round btn-xs no-hover">
                                                                    <i class="ace-icon fa fa-cogs"></i>
                                                                    Ongoing
                                                                </a>
                                                            </div>
                                                        }
                                                        else if (cis.status == 6)
                                                        {
                                                            <div class="pull-center">
                                                                <a href="../Masters/Master?id=@cis.id" class="btn btn-primary btn-round btn-xs no-hover">
                                                                    <i class="ace-icon fa fa-cogs"></i>
                                                                    Ongoing
                                                                </a>
                                                            </div>
                                                        }
                                                        else if (cis.status == 7)
                                                        {
                                                            <div class="pull-center">
                                                                <a href="../Masters/TurnOver" class="btn btn-pink btn-round btn-xs no-hover">
                                                                    <i class="ace-icon fa fa-cogs"></i>
                                                                    For Turn-Over
                                                                </a>
                                                                <a href="../Masters/Master?id=@cis.id" class="btn btn-yellow btn-round btn-xs no-hover">
                                                                    <i class="ace-icon fa fa-eye"></i>
                                                                    View
                                                                </a>
                                                            </div>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" id="tohide" style="display:none">
            <div class="col-xs-12">
                <table id="export_to_excel" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">Customer Name</th>
                            <th class="center">Unit No.</th>
                            <th class="center">Project</th>
                            <th class="center">Financing</th>
                            <th class="center">Fullpayment Date</th>
                            <th class="center">TCP</th>
                            <th class="center">Title No.</th>
                            <th class="center">Tax Dec No.</th>
                            <th class="center">DOAS Date</th>
                            <th class="center">DST Request Date</th>
                            <th class="center">Notarized DOAS Date</th>
                            <th class="center">Transfer Tax Request Date</th>
                            <th class="center">EWT Date</th>
                            <th class="center">CTS Date</th>
                            <th class="center">Date Receipt Received</th>
                            <th class="center">Remarks</th>
                            <th class="center">Title Request Date</th>
                            <th class="center">Title Availability Date</th>
                            <th class="center">Date completed</th>
                            <th class="center">Remarks</th>
                            <th class="center">Date Submitted</th>
                            <th class="center">Remarks</th>
                            <th class="center">Document Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var cis in ViewBag.EXPORT)
                            {
                                <tr>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.customername
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.unitno
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.project
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.financing
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.fullpamentdate
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.tcp
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.titleno
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.taxdecno
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.doasdate
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.dstrequestdate
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.notarizeddoasdate
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.transfertaxrequdate
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.ewtdate
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.ctsdate
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.datereceiptreceived
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.remarks1
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.titlerequestdate
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.titleavailabilitydate
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.datecompleted
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.remarks2
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.datesubmitted
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.remarks3
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @cis.documentstatus
                                        </label>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            //Datatable Financing
            $('#document').DataTable();
        });                

        function ExportToExcel(type, fn, dl) {
            var elt = document.getElementById('export_to_excel');
            var wb = XLSX.utils.table_to_book(elt, { sheet: "sheet1" });
            return dl ?
                XLSX.write(wb, { bookType: type, bookSST: true, type: 'base64' }) :
                XLSX.writeFile(wb, fn || ('CONVERSIONSYSTEM.' + (type || 'xlsx')));
            alert("Okay");
        }
    </script>
}
