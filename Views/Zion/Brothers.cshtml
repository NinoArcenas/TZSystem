
@{
    ViewBag.Title = "Brothers";
}

<br />
<body class="background-White" style="background-color:white">
    <div class="widget-body" style="background-color:white">
        <div class="col-xs-12 col-sm-12">
            <div class="widget-box widget-color-blue3">
                <div class="widget-header">
                    <div class="widget-title">
                        NAME LIST
                        <div class="widget-toolbar">
                            <div class="pull-center">
                                <a class="btn btn-xs btn-primary no-hover" data-toggle="modal" data-target="#AddBrothersModal">
                                    <span class="bigger-110">Add Brother</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <table id="mastersBrothersTable" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center" hidden></th>
                            <th class="center" style="color: black; background-color:cornflowerblue">FIRST NAME</th>
                            <th class="center" style="color: black; background-color: cornflowerblue">MIDDLE NAME</th>
                            <th class="center" style="color: black; background-color: cornflowerblue">LAST NAME</th>
                            <th class="center" style="color: black; background-color: cornflowerblue">ACTION STATUS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var bro in ViewBag.Brothers)
                            {
                                <tr>
                                    <td style="text-align:center" hidden>
                                        <label>
                                            @bro.id
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @bro.fname
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @bro.mname
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <label>
                                            @bro.lname
                                        </label>
                                    </td>
                                    <td style="text-align:center">
                                        <div class="pull-center">
                                            <a href="../Zion/BrotherDetails?generated=@bro.id" class="btn btn-white btn-info btn-round btn-xs no-hover getbrother">
                                                View
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <!--Modal Save Brother-->
                <div class="modal fade" id="AddBrothersModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" style="text-align:left" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h5 class="modal-title" id="exampleModalLabel">Add Brother</h5>
                            </div>
                            <div class="modal-body">
                                <form id="FormBrothers" method="post">
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">FIRST NAME <label style="color: red">*</label>:</label>
                                        <input type="text" class="form-control" id="AddFirstName" />
                                    </div>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">MIDDLE NAME:</label>
                                        <input type="text" class="form-control" id="AddMiddleName" />
                                    </div>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">LAST NAME <label style="color: red">*</label>:</label>
                                        <input type="text" class="form-control" id="AddLastName" />
                                    </div>
                                </form>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary no-hover" id="SaveBrother">SAVE</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Modal View Brother-->
                <div class="modal fade bs-example-modal-lg" id="ViewModalBrother" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" style="text-align:left" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h5 class="modal-title" id="exampleModalLabel">VIEW BROTHER</h5>
                            </div>
                            <div class="modal-body">
                                <form id="ViewFormBrothers" method="post">
                                    <div class="form-group" hidden>
                                        <label for="recipient-name" class="col-form-label">ID:</label>
                                        <input type="text" class="form-control" id="ViewBrtherId" readonly="readonly" />
                                    </div>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">FIRST NAME:</label>
                                        <input type="text" class="form-control" id="ViewFirstName" readonly="readonly" />
                                    </div>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">MIDDLE NAME:</label>
                                        <input type="text" class="form-control" id="ViewMiddleName" readonly="readonly" />
                                    </div>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">LAST NAME:</label>
                                        <input type="text" class="form-control" id="ViewLastName" readonly="readonly" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {

            $("#mastersBrothersTable").DataTable();

            //View Brothers
            $(".getbrother").click(function () {
                var id = this.id;
                var splits = id.split('*');
                var ViewFN = splits[0];
                var ViewMN = splits[1];
                var ViewLN = splits[2];
                var ViewBroId = splits[3];
                $("#ViewFirstName").val(ViewFN);
                $("#ViewMiddleName").val(ViewMN);
                $("#ViewLastName").val(ViewLN);
                $("#ViewBrtherId").val(ViewBroId);
            });

            //Save Brothers
            $("#SaveBrother").click(function () {
                var addF = $("#AddFirstName").val();
                var addM = $("#AddMiddleName").val();
                var addL = $("#AddLastName").val();
                if (addF != "" && addL != "") {
                    var url = "/Zion/Save_Brothers";
                    $.post(url, {
                        AddF: addF,
                        AddM: addM,
                        AddL: addL
                    }, function (data) {
                        // Check if success is true or false
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Brother Successfully Saved!',
                                text: data.message
                            }).then(function () {
                                // Optional: Reload the page or reset the form after success
                                location.reload();
                                $("#FormBrothers")[0].reset();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: data.message
                            });
                        }
                    }, "json"); // Ensure the response is treated as JSON
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Requred all details.'
                    });
                }
            });

        });

    </script>
}
