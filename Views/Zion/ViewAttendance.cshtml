                                    //get product using prod gen code
                                    var GetListOfAttendancePresentUsingGencode = TADTitleConversion.Controllers.ZionController.GetListOfAttendancePresentUsingGencode(proditem.members_gencode);
                                    foreach (var listofattend in GetListOfAttendancePresentUsingGencode)
                                    {
                                        var GetFullnameUsingIDno = TADTitleConversion.Controllers.ZionController.GetMemberFullnameUsingGencode(listofattend.members_gencode);
